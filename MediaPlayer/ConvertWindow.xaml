<Window x:Class="MediaPlayer.ConvertWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Конвертер файлов" Height="300" Width="400">
    <StackPanel Margin="20">
        <Button Content="Выбрать файл" Click="BrowseButton_Click" Padding="10,5"/>
        <TextBlock x:Name="FilePathText" Margin="0,10" TextWrapping="Wrap"/>

        <ComboBox x:Name="FormatComboBox" Margin="0,10" SelectedIndex="0">
            <ComboBoxItem Content="MP4"/>
            <ComboBoxItem Content="AVI"/>
            <ComboBoxItem Content="MKV"/>
            <ComboBoxItem Content="FLV"/>
            <ComboBoxItem Content="WMV"/>
            <ComboBoxItem Content="MOV"/>
            <ComboBoxItem Content="MP3"/>
            <ComboBoxItem Content="WAV"/>
            <ComboBoxItem Content="AAC"/>
            <ComboBoxItem Content="OGG"/>
            <ComboBoxItem Content="WEBM"/>
        </ComboBox>

        <Button Content="Конвертировать" Click="ConvertButton_Click" 
                Padding="10,5" Margin="0,20" FontWeight="Bold"/>

        <TextBlock x:Name="StatusText" HorizontalAlignment="Center" Margin="0,10"/>
    </StackPanel>
</Window>